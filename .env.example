# API Keys (Optional - use "demo" to run without API key)
# For full AI capabilities, get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=demo
OPENAI_API_KEY=your_openai_api_key_here

# Database
MONGODB_URI=mongodb://localhost:27017/deepblue-health
# OR use Supabase/PostgreSQL
DATABASE_URL=your_database_url_here

# JWT Secret
JWT_SECRET=your_secure_jwt_secret_here

# App Settings
NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development

# IoT Integration (Optional)
IOT_DEVICE_API_KEY=your_iot_device_api_key
IOT_WEBHOOK_SECRET=your_webhook_secret

# Emergency Services API (Optional)
EMERGENCY_SERVICE_API_KEY=your_emergency_api_key

# SMS/WhatsApp Integration (Optional - Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_phone

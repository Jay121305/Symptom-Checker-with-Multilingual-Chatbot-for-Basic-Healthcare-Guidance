# ========================================================================
# DeepBlue Health — Environment Configuration
# ========================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# The app works in degraded mode without optional keys (local AI fallback).
# ========================================================================

# ── AI Services ─────────────────────────────────────────────────────────

# [RECOMMENDED] Google Gemini API Key — Primary AI engine (text + vision)
# Get yours free at: https://aistudio.google.com/apikey
# Free tier: 1500 requests/day (more than enough for demos)
GEMINI_API_KEY=your_gemini_api_key_here

# [OPTIONAL] Groq API Key — Fallback AI (LLaMA 3.3 70B)
# Get yours at: https://console.groq.com/keys
GROQ_API_KEY=

# [OPTIONAL] Anthropic API Key — Third-tier fallback (Claude)
# Set to "demo" to disable
ANTHROPIC_API_KEY=demo

# ── Google Cloud (Vision API) ──────────────────────────────────────────

# [OPTIONAL] Google Cloud project for Gemini Vision features
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# ── Database ────────────────────────────────────────────────────────────

# [OPTIONAL] MongoDB URI — App works fully without it (in-memory fallback)
MONGODB_URI=mongodb://localhost:27017/deepblue-health

# ── Authentication ──────────────────────────────────────────────────────

# [RECOMMENDED] JWT signing secret — use a random 32+ char string
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change_this_to_a_random_secret_string

# ── App Configuration ──────────────────────────────────────────────────

NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development

# ── Demo Mode ──────────────────────────────────────────────────────────

# Set to "true" for hackathon presentations
NEXT_PUBLIC_DEMO_MODE=true

# ── Optional: SMS Notifications (Twilio) ───────────────────────────────

# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=your_twilio_phone
